{
  "compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@pages/*": ["src/pages/*"],
			"@components/*": ["src/components/*"],
      "@ui/*": ["src/ui/*"],
			"@hooks/*": ["src/hooks/*"],
			"@apis/*": ["src/apis/*"],
			"@utils/*": ["src/utils/*"],
			"@data/*": ["src/data/*"],
			"@assets/*": ["src/assets/*"],
			"@icons/*": ["src/icons/*"],
			"@enums/*": ["src/enums/*"],
			"@schemas/*": ["src/schemas/*"],
			"@mappings/*": ["src/mappings/*"]
		},
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
